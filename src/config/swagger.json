{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": ""
  },
  "paths": {
    "/attendance": {
      "get": {
        "tags": [
          "Attendence"
        ],
        "summary": "List attendance rules",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        },
        "content": {
          "application/json": {
          }
        }
      },
      "post": {
        "tags": [
          "Attendence"
        ],
        "summary": "create a attendance rule",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Attendance"
              }
            }
          },
          "description": "The attendance to create",
          "required": true
        },
        "content": {
          "application/json": {
          }
        }
      }
    },
    "/attendance/{ruleId}": {
      "delete": {
        "tags": [
          "Attendence"
        ],
        "summary": "delete a attendance rule by id",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not found"
          }
        },
        "parameters": [
          {
            "name": "ruleId",
            "in": "path",
            "description": "Id of attendance rule",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ]
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1"
    }
  ],
  "components": {
    "schemas": {
      "Attendance": {
        "type": "object",
        "required": "intervals",
        "properties": {
          "frequency": {
            "$ref": "#/components/schemas/Frequency"
          },
          "intervals": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Interval"
            }
          }
        }
      },
      "Frequency": {
        "oneOf": [
          {
            "$ref": "#/components/schemas/Reserved"
          },
          {
            "$ref": "#/components/schemas/Weekly"
          }
        ]
      },
      "Interval": {
        "type": "object",
        "required": [
          "start",
          "end"
        ],
        "properties": {
          "start": {
            "type": "string",
            "example": "00:00"
          },
          "end": {
            "type": "string",
            "example": "00:00"
          }
        }
      },
      "Reserved": {
        "type": "object",
        "required": "day",
        "properties": {
          "day": {
            "type": "string",
            "example": "01/01/2020"
          }
        }
      },
      "Weekly": {
        "type": "object",
        "required": "days",
        "properties": {
          "days": {
            "type": "array",
            "items": {
              "type": "string",
              "example": [
                "Monday",
                "Wednesday"
              ]
            }
          }
        }
      }
    }
  }
}